{
  "name": "sysmelite-pms",
  "version": "1.1.0",
  "description": "SysmeLite PMS - PMS gratuito con Electron, React y SQLite",
  "main": "main.js",
  "type": "commonjs",
  "author": "SysmeLite",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-renderer\" \"npm run start-electron\"",
    "start-renderer": "vite",
    "start-electron": "wait-on http://localhost:5173 && electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.sysmelite.pms",
    "productName": "SysmeLite PMS",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "db-schema.sql",
      "renderer/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "electron": "^30.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "vite": "^5.3.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "electron-builder": "^24.13.3"
  }
}